 xmlns:admin="http://webns.net/mvcb/"
>

<channel rdf:about="[% c.script %]/[% c.repos %]/log[% c.path %]">
  <title>[%|l%](revision log)[%END%] - [% c.path %]</title>
  <link>[% c.script %]/[% c.repos %]/log[% c.path %]</link>
  <description></description>
  <dc:date>[% revs.0.date %]</dc:date>
  [% IF publisher != '' %]<dc:publisher>[% publisher %]</dc:publisher>[% END %]
  <dc:creator>SVN::Web</dc:creator>
  <syn:updatePeriod>daily</syn:updatePeriod>
  <syn:updateFrequency>1</syn:updateFrequency>
  <syn:updateBase>1901-01-01T00:00+00:00</syn:updateBase>
  <items>
    <rdf:Seq>
    [%- FOREACH revs %]
      <rdf:li rdf:resource="[% c.script %]/[% c.repos %]/revision?rev=[% rev %]" />
    [%- END %]
    </rdf:Seq>
  </items>
</channel>

[% FOREACH revs %]
<item rdf:about="[% c.script %]/[% c.repos %]/revision?rev=[% rev %]">
  <title>[% rev %] - [% msg | truncate(80) | html %]</title>
  <link>[% c.script %]/[% c.repos %]/revision?rev=[% rev %]</link>
  <description><![CDATA[[% log_msg(msg) %]]]></description>
  <dc:creator>[% author %]</dc:creator>
  <dc:date>[% date %]</dc:date>
</item>
[% END %]

